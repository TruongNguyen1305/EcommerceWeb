@model EcommerceWebApp.Models.Page

@{
    ViewData["Title"] = "Details " + Model.PageName;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<h1>@ViewData["Title"]</h1>
<div>
    <div class="row">
        <div class="col-md-1">
                <img src="~/images/pages/@Model.Thumb" alt="@Model.Title" style="object-fit: cover; width: 70px; height: 70px; ">
        </div>
        <div class="col-md-8">
            <span class="text-primary">@Model.PageName.ToUpper()</span><br />
            <span class="text-secondary">@Model.PageId</span>
        </div>
    </div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PageName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PageName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Contents)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Contents)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Thumb)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Thumb)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Published)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Published)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MetaDesc)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MetaDesc)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MetaKey)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MetaKey)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Alias)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Alias)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreateAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreateAt)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ordering)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ordering)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.PageId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
