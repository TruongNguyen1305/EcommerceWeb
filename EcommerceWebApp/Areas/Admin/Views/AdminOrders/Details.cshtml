@model EcommerceWebApp.Models.Order

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-7">
            <h4>Detail order @Model.OrderId</h4>
            <hr />
            <dl class="row">
                <dt class="col-md-2">
                    @Html.DisplayNameFor(model => model.OrderDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.OrderDate)
                </dd>
                <dt class="col-md-2">
                    @Html.DisplayNameFor(model => model.ShipDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ShipDate)
                </dd>
                <dt class="col-md-2">
                    @Html.DisplayNameFor(model => model.Deleted)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Deleted)
                </dd>
                <dt class="col-md-2">
                    @Html.DisplayNameFor(model => model.Paid)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Paid)
                </dd>
                <dt class="col-md-2">
                    @Html.DisplayNameFor(model => model.PaymentDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PaymentDate)
                </dd>
                <dt class="col-md-2">
                    @Html.DisplayNameFor(model => model.PaymentId)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PaymentId)
                </dd>
                <dt class="col-md-2">
                    @Html.DisplayNameFor(model => model.Note)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Note)
                </dd>
                <dt class="col-md-2">
                    @Html.DisplayNameFor(model => model.TransactStatus)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.TransactStatus.TransactStatusId)
                </dd>
            </dl>
        </div>
        <div class="col-md-5">
            <h4>Detail customer</h4>
            <hr />
            <dl class="row">
                <dt class="col-md-2">
                    @Html.DisplayNameFor(model => model.Customer)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Customer.FullName)
                </dd>
                <dt class="col-md-2">
                    @Html.DisplayNameFor(model => model.Customer.Address)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Customer.Address)
                </dd>
                <dt class="col-md-2">
                    @Html.DisplayNameFor(model => model.Customer.Phone)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Customer.Phone)
                </dd>
                <dt class="col-md-2">
                    @Html.DisplayNameFor(model => model.Customer.Email)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Customer.Email)
                </dd>
            </dl>
        </div>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.OrderId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
